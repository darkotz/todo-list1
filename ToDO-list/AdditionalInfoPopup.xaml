<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="ToDO_list.AdditionalInfoPopup">
    
    <VerticalStackLayout Padding="20" Spacing="10" BackgroundColor="White">
        <Label Text="Дополнительная информация:" />
        <Entry x:Name="infoEntry" Placeholder="Что-то еще..." />
        <Button Text="Сохранить" Clicked="OnSaveClicked" />
    </VerticalStackLayout>
</toolkit:Popup>